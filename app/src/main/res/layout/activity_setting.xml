<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <ImageView
        android:id="@+id/arowblack"
        android:layout_width="27dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/arowblack"
        />

    <TextView

        android:id="@+id/Setting_Activity_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_layout_margin_top_14"
        android:fontFamily="@font/abeezee"
        android:text="@string/Setting_Activity_Text"
        android:textColor="@color/textcolor"
        android:textSize="24sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toEndOf="@+id/arowblack"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:orientation="vertical"
        android:paddingBottom="21dp"
        app:layout_constraintTop_toBottomOf="@+id/Setting_Activity_Text"
        tools:layout_editor_absoluteX="-1dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:minHeight="48dp"
                android:paddingStart="@dimen/text_view_padding_start_setting_activity_16"
                android:text="@string/Black_Theme"
                android:textSize="@dimen/text_size_setting_activity_text_view_20sp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </FrameLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/text_view_padding_start_setting_activity_16"
            android:paddingEnd="@dimen/text_view_padding_end_setting_activity_21"
            android:fontFamily="@font/abeezee"
            android:paddingTop="@dimen/text_viev_padding_top_21"
            android:paddingBottom="@dimen/text_viev_padding_bottom_21"
            android:text="@string/ShareApplication"

            android:textColor="@color/black"
            android:textSize="@dimen/text_size_setting_activity_text_view_20sp"

            app:drawableEndCompat="@drawable/share"
            app:iconGravity="textEnd"
            app:iconPadding="50dp"

            app:iconTint="@color/textcolor" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abeezee"
            android:paddingTop="@dimen/text_viev_padding_top_21"
            android:paddingBottom="@dimen/text_viev_padding_bottom_21"
            android:text="@string/writeToSupport"
            android:paddingStart="@dimen/text_view_padding_start_setting_activity_16"
            android:paddingEnd="@dimen/text_view_padding_end_setting_activity_21"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/text_size_setting_activity_text_view_20sp"

            app:drawableEndCompat="@drawable/support"
            app:iconGravity="textEnd"
            app:iconPadding="80sp"
            app:iconTint="@color/textcolor" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abeezee"
            android:paddingTop="@dimen/text_viev_padding_top_21"
            android:paddingBottom="@dimen/text_viev_padding_bottom_21"
            android:text="@string/UserAgreement"
            android:paddingStart="@dimen/text_view_padding_start_setting_activity_16"
            android:paddingEnd="23dp"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/text_size_setting_activity_text_view_20sp"

            app:drawableEndCompat="@drawable/arrovforward"
            app:iconGravity="textEnd"
            app:iconPadding="50dp"

            app:iconTint="@color/textcolor" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>