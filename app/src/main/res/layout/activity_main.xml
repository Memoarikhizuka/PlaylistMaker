<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:background="@color/background"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="52dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Playlist_Maker"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginStart="@dimen/default_horisontal_margin_16"
                android:layout_marginTop="@dimen/default_layout_margin_top_14"
                android:text="@string/playlist_maker"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="normal|bold" />


        </LinearLayout>

        <Button
            android:id="@+id/search"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/default_horisontal_margin_16"
            android:layout_marginEnd="@dimen/default_horisontal_margin_16"
            android:layout_marginBottom="@dimen/default_bottom_margin_16"
            android:layout_weight="1"
            android:backgroundTint="@color/button_background"
            android:fontFamily="@font/abeezee"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/Search"

            android:textAllCaps="false"
            android:textColor="@color/textcolor"
            android:textIsSelectable="false"
            android:textSize="22sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"

            app:icon="@drawable/search"
            app:iconGravity="textStart"
            app:iconPadding="3pt"
            app:iconTint="@color/textcolor"
            app:rippleColor="@color/white" />

        <Button
            android:id="@+id/media"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/default_horisontal_margin_16"
            android:layout_marginEnd="@dimen/default_horisontal_margin_16"
            android:layout_marginBottom="@dimen/default_bottom_margin_16"
            android:layout_weight="1"
            android:backgroundTint="@color/button_background"
            android:fontFamily="@font/abeezee"
            android:gravity="center_horizontal|center_vertical"

            android:text="@string/Mediatek"
            android:textAllCaps="false"
            android:textColor="@color/textcolor"
            android:textIsSelectable="false"
            android:textSize="22sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"

            app:icon="@drawable/media"
            app:iconGravity="textStart"
            app:iconPadding="3pt"
            app:iconTint="@color/textcolor"
            app:rippleColor="@color/white" />

        <Button
            android:id="@+id/settings"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/default_horisontal_margin_16"
            android:layout_marginEnd="@dimen/default_horisontal_margin_16"
            android:layout_marginBottom="28dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_background"
            android:fontFamily="@font/abeezee"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/Settings"

            android:textAllCaps="false"
            android:textColor="@color/textcolor"
            android:textIsSelectable="false"
            android:textSize="22sp"
            android:textStyle="bold"
            app:cornerRadius="16dp"

            app:icon="@drawable/tools"
            app:iconGravity="textStart"
            app:iconPadding="3pt"
            app:iconTint="@color/textcolor"
            app:rippleColor="@color/white" />

    </LinearLayout>