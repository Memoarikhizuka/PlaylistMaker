<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/main_screen_button_background</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_screen_text_color</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">3pt</item>
        <item name="iconTint">@color/main_screen_icon_color</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="SettingActivityTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/text_viev_padding_top_21</item>
        <item name="android:paddingBottom">@dimen/text_viev_padding_bottom_21</item>
        <item name="android:paddingStart">@dimen/text_view_padding_start_setting_activity_16</item>
        <item name="android:paddingEnd">@dimen/text_view_padding_end_setting_activity_21</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/setting_screen_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconTint">@color/setting_screen_text_color</item>

    </style>
</resources>